<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_03"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="87dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/icon" />

    <EditText
        android:id="@+id/et_name"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:layout_below="@+id/iv_user"
        android:layout_marginTop="22dp"
        android:text="Name"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />







    <EditText
        android:id="@+id/et_mobile"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        />

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="22dp"
        android:text="Mobile"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />







    <EditText
        android:id="@+id/et_password"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:layout_below="@+id/et_mobile"
        android:layout_marginTop="22dp"
        android:text="Password"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />



    <EditText
        android:id="@+id/et_chasis_no"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        />

    <TextView
        android:id="@+id/tv_chasis_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="22dp"
        android:text="Chasis Number"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />



    <EditText
        android:id="@+id/et_class_of_vehicle"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_chasis_no"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        />

    <TextView
        android:id="@+id/tv_class_of_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_chasis_no"
        android:layout_alignStart="@+id/et_chasis_no"
        android:layout_below="@+id/et_chasis_no"
        android:layout_marginTop="22dp"
        android:text="Class Of Vehicle"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/et_engine_no"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_class_of_vehicle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/tv_engine_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_class_of_vehicle"
        android:layout_alignStart="@+id/et_class_of_vehicle"
        android:layout_below="@+id/et_class_of_vehicle"
        android:layout_marginTop="22dp"
        android:text="Engine Number"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />




    <EditText
        android:id="@+id/et_age"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_engine_no"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_engine_no"
        android:layout_alignStart="@+id/et_engine_no"
        android:layout_below="@+id/et_engine_no"
        android:layout_marginTop="22dp"
        android:text="Your Age"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />




    <EditText
        android:id="@+id/et_address"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_age"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_age"
        android:layout_alignStart="@+id/et_age"
        android:layout_below="@+id/et_age"
        android:layout_marginTop="22dp"
        android:text="Address"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />
    <Button
        android:id="@+id/btn_register"
        android:background="@drawable/buttonbg1"
        android:textColor="#ffffff"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/et_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="driver_registration"
        android:layout_marginBottom="40dp"
        android:text="Register" />

    </RelativeLayout>
</ScrollView>
